  "dependencies": {
    "esbuild": "^0.23.0",
    "picomatch": "^4.0.1",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/picomatch": "^3.0.0",
