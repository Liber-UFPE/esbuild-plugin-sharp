{
  "name": "@liber-ufpe/esbuild-plugin-sharp",
  "engines": {
    "node": ">=18"
  },
  "version": "1.1.0",
  "description": "esbuild plugin that uses sharp to create webp and avif versions for your images",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Liber-UFPE/esbuild-plugin-sharp.git"
